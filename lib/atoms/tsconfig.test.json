{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "paths": {
      "*": ["*"]
    },
    "lib": ["es6", "es7", "dom", "esnext", "es2017", "es2016", "es2015"],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      }
    ]
  }
}
